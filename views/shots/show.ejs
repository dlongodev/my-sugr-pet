<main class="app-main main-screen align-items-center">
    <div class="text-center my-3">
        <h1 class="h1">
            <%= pet.petName %>
                </h3>
                <h2 class="h2">Insulin Injections History</h2>
    </div>
    <div class="shot-history-container">
        <% if (!!sortedDates.length) {sortedDates.forEach(shot=> { %>
            <article class="shot-card round-bdr-1 mb-3 shadow">
                <div class="mb-3 text-center">
                    <p class="mt-2 mb-0 title">
                        <%= shot.injectionSite %>
                    </p>
                    <img src="/img/shot_<%= shot.injectionSite %>.svg" width="60px" alt="icon for injection on <%= shot.injectionSite %> ">
                </div>
                <div>
                    <%= moment(shot.date).utc().format('MM/DD/YY') %>
                </div>
                <div>
                    <%= moment(shot.time, "H:mm" ).format("h:mma") %>
                </div>
                <div>
                    <%= shot.dosage %>
                </div>
                <form action="/pet/<%= pet._id %>/shots/<%= shot._id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-sm bg-base text-white" aria-label="Delete"><i class="fas fa-trash-alt"></i></button>
                </form>
            </article>
            <% })} else { %>
                <article class="shot-card bg-white round-bdr-1 mt-3 shadow">
                    <p class="mt-1 mb-0 title">
                        No Injection History Available
                    </p>
                </article>
                <% } %>

    </div>
</main>
<nav class="navbar">
    <div>
        <a href="/pet/<%= pet._id %>" class="navbar-link"><i class="fa-solid fa-paw"></i>
            <%= pet.petName %>
        </a>
    </div>
    <div>
        <a href="/pet/<%= pet._id %>/edit" class="navbar-link"><i class="fa-solid fa-pen-to-square"></i></i>
            Edit Pet</a>
    </div>
    <div class="main-icon-container">
        <div class="main-icon shadow" data-toggle="tooltip" data-placement="top" title="Track Insulin">
            <a href="../shots/new" class="navbar-link"><i class="fa-solid fa-syringe"></i></a>
        </div>
    </div>
    <div>
        <a href="./show" class="navbar-link">
            <i class="fa-solid fa-clock-rotate-left"></i>
            History</a>
    </div>
    <div>
        <a class="navbar-link" href="/logout"><i class="fas fa-sign-out-alt"></i>
            Logout</a>
    </div>
</nav>