<main class="app-main">
    <div class="col-sm-12 col-md-8 content mt-2">
        <div class="d-flex justify-content-between mt-3 px-2 w-100">
            <div><a href="/pet/<%= pet.id %>" class="btn btn-sm btn-outline-light"><i class="fas fa-chevron-circle-left"></i></a></div>
            <div><a class="btn btn-sm btn-outline-light" href="/logout">Logout <i class="fas fa-sign-out-alt"></i></a></div>
        </div>
        <div class="text-center col-sm-12 m-3">
            <h1 class="text-white">
                <%= pet.petName %>
                    </h3>
                    <h5>New Insulin Injection Entry</h5>
        </div>
        <form action="/pet/<%= pet.id %>/shots" method="POST">
            <fieldset class="form-group d-flex mb-4">
                <span class="input-group-text" id="date" for="date">Date:</span>
                <input class="form-control" type="date" name="date" id="date">
            </fieldset>
            <fieldset class="form-group d-flex mb-4">
                <span class="input-group-text" id="time" for="time">Time:</span>
                <input class="form-control" type="time" name="time" id="time">
            </fieldset>
            <fieldset class="form-group d-flex mb-4">
                <span class="input-group-text" id="dosage" for="dosage">Dosage:</span>
                <input class="form-control" type="number" name="dosage" id="dosage" min="1" max="7">
            </fieldset>
            <div class="shot-form bg-white shadow mb-4">
                <p class="input-group-text justify-content-center mb-3">Injection Location</p>
                <fieldset class="shot-grid">
                    <label class="text-right" data-bs-toggle="tooltip" data-bs-placement="top" title="2022-01-17 at 9:34pm" for="front-left">
                        <i class="far fa-calendar-alt"></i> Front-Left</label>

                    <div><input class="form-check-input" type="radio" name="injectionSite" id="front-left" value="front-left"></div>

                    <div><input class="form-check-input" type="radio" name="injectionSite" id="front-right" value="front-right">
                    </div>
                    <label class="text-left" data-bs-toggle="tooltip" data-bs-placement="top" title="2022-01-16 at 9:33pm" for="front-right">Front-Right <i class="far fa-calendar-alt"></i></label>
                    <label class="text-right" data-bs-toggle="tooltip" data-bs-placement="top" title="2022-01-17 at 9:45am" for="back-left"><i class="far fa-calendar-alt"></i> Back-Left</label>
                    <div><input class="form-check-input" type="radio" name="injectionSite" id="back-left" value="back-left"></div>


                    <div><input class="form-check-input" type="radio" name="injectionSite" id="back-right" value="back-right"></div>
                    <label class="text-left" data-bs-toggle="tooltip" data-bs-placement="top" title="2022-01-18 at 9:30am" for="back-right">Back-Right <i class="far fa-calendar-alt"></i></label>
                </fieldset>
            </div>
            <div class="col-sm-12 d-flex justify-content-center"><input class="btn btn-base btn-max-width shadow d-flex" type="submit" value="Done"></div>
        </form>
    </div>
    </div>
</main>