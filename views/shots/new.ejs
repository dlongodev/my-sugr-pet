<main class="app-main main-screen">
    <div class="shot-form-container">
        <div class="text-center my-2">
            <h1 class="text-white mb-0">
                <%= pet.petName %>
                    </h3>
                    <h5 class="txt-light m-0">New Insulin Injection Entry</h5>
        </div>
        <form action="/pet/<%= pet.id %>/shots" method="POST">
            <fieldset class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="date" for="date">Date:</span>
                </div>
                <input class="form-control" type="date" name="date" id="date">
            </fieldset>
            <fieldset class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="time" for="time">Time:</span>
                </div>
                <input class="form-control" type="time" name="time" id="time">
            </fieldset>
            <fieldset class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="dosage" for="dosage">Dosage:</span>
                </div>
                <input class="form-control" type="number" name="dosage" id="dosage" min="1" max="7">
            </fieldset>
            <div class="shot-form bg-white shadow mb-4">
                <p class="input-group-text justify-content-center mb-3">Injection Location</p>
                <fieldset class="shot-grid">
                    <label class="text-right" data-bs-toggle="tooltip" data-bs-placement="top" title="<%= latestData.frontLeft.date %>
                        <%= latestData.frontLeft.time %> " for="front-left">
                        <i class="far fa-calendar-alt"></i>
                    </label>
                    <div><input class="form-check-input" type="radio" name="injectionSite" id="front-left" value="front-left"></div>
                    <div><input class="form-check-input" type="radio" name="injectionSite" id="front-right" value="front-right">
                    </div>
                    <label class="text-left" data-bs-toggle="tooltip" data-bs-placement="top" title="<%= latestData.frontRight.date %>
                        <%= latestData.frontRight.time %> " for="front-right"><i class="far fa-calendar-alt"></i>
                    </label>
                    <label class="text-right" data-bs-toggle="tooltip" data-bs-placement="top" title="<%= latestData.backLeft.date %>
                        <%= latestData.backLeft.time %> " for="back-left"><i class="far fa-calendar-alt"></i>
                    </label>
                    <div><input class="form-check-input" type="radio" name="injectionSite" id="back-left" value="back-left"></div>
                    <div><input class="form-check-input" type="radio" name="injectionSite" id="back-right" value="back-right"></div>
                    <label class="text-left" data-bs-toggle="tooltip" data-bs-placement="top" title="<%= latestData.backRight.date %>
                        <%= latestData.backRight.time %> " for="back-right"><i class="far fa-calendar-alt"></i>
                    </label>
                </fieldset>
            </div>
            <div class="d-flex justify-content-center">
                <input class="btn btn-base btn-max-width shadow mb-4" type="submit" value="Done">
            </div>
        </form>
    </div>
</main>
