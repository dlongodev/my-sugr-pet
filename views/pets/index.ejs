<main class="app-main mb-5">
    <div class="col-sm 12 text-right mt-3">
        <div class="btn-group"><a href="/pet/new" class="btn btn-sm btn-outline-light"><svg
                    xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-plus-circle align-middle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                    <path
                        d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg> Add Pet</a><a class="btn btn-sm btn-outline-light" href="/logout">Logout <svg
                    xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-chevron-double-right align-middle" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M3.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L9.293 8 3.646 2.354a.5.5 0 0 1 0-.708z" />
                    <path fill-rule="evenodd"
                        d="M7.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L13.293 8 7.646 2.354a.5.5 0 0 1 0-.708z" />
                </svg></a>
        </div>
    </div>
    <div class="row text-center bg-light align-items-center justify-content-center">
        <div class="col-sm-12 w-100">
            <h2>Manage Your Pets</h2>
        </div>
        <% pets.forEach(pet=> { %>
            <div class="col-md-6 col-sm-6 col-lg-4">
                <div class="card">
                    <a href="/pet/<%= pet._id %> "><img
                            src="https://images.unsplash.com/photo-1567733329278-256b8bbe153b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1yZWxhdGVkfDEwfHx8ZW58MHx8fHw%3D&auto=format&fit=crop&w=500&q=60"
                            width="100%" alt="photo of <%= pet.petName %>"></a>
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/pet/<%= pet._id %> ">
                                <%= pet.petName %>
                            </a>
                        </h5>
                        <div class="d-flex">
                            <a class="btn btn-sm btn-primary" href="/pet/<%= pet._id %>/edit">EDIT PET</a>
                            <form action='/pet/<%= pet.id %>?_method=DELETE' method="POST">
                                <input class="btn btn-sm btn-danger" type="submit" value="DELETE PET" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        </section>
