<section class="container">
    <div class="text-right">
        <p><a href="/pet/new">Add Pet</a></p>
    </div>
    <div class="row text-center bg-light align-items-center justify-content-center">
        <div class="col-sm-12 w-100">
            <h2>Manage Your Pets</h2>
        </div>
        <% pets.forEach(pet=> { %>
            <div class="col-md-6 col-sm-6 col-lg-4">
                <div class="card">
                    <a href="/pet/<%= pet._id %> "><img
                            src="https://images.unsplash.com/photo-1567733329278-256b8bbe153b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1yZWxhdGVkfDEwfHx8ZW58MHx8fHw%3D&auto=format&fit=crop&w=500&q=60"
                            width="100%" alt="photo of <%= pet.petName %>"></a>
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/pet/<%= pet._id %> ">
                                <%= pet.petName %>
                            </a>
                        </h5>
                        <div class="d-flex">
                            <a class="btn btn-sm btn-primary" href="/pet/<%= pet._id %>/edit">EDIT PET</a>
                            <form action='/pet/<%= pet.id %>?_method=DELETE' method="POST">
                                <input class="btn btn-sm btn-danger" type="submit" value="DELETE PET" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        </section>
