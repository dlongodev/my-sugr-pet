<main class="bg-base app-main main-screen py-4">
    <div class="row justify-content-center align-center m-0">
        <div class="col-sm-10 col-md-8 mx-3">
            <div class="text-center text-white">
                <h3>Create Your Pet Profile</h3>
            </div>
            <form action="/pet" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
                <fieldset class="form-group text-center">
                    <div class="row text-white">
                        <legend>Choose kind of pet</legend>
                        <div class='col text-right'>
                            <input type="radio" name="kind" id="dog" class="d-none imgbgchk" value="dog">
                            <label for="dog" aria-describedby="dog">
                                <img src="../img/icon-dog.png" alt="dog icon">
                                <div class="tick_container">
                                    <div class="tick"><i class="fa fa-check"></i></div>
                                </div>
                            </label>
                        </div>
                        <div class='col text-left'>
                            <input type="radio" name="kind" id="cat" class="d-none imgbgchk" value="cat">
                            <label for="cat" aria-describedby="cat">
                                <img src="../img/icon-cat.png" alt="Image 2">
                                <div class="tick_container">
                                    <div class="tick"><i class="fa fa-check"></i></div>
                                </div>
                            </label>
                        </div>
                    </div>
                </fieldset>
                <fieldset class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="petName">Pet Name:</span>
                    </div>
                    <input class="form-control" type="text" name="petName" id="petName" required>
                    <div class="invalid-feedback">Please provide your pet's name.</div>
                </fieldset>
                <fieldset class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="breed">Breed:</span>
                    </div>
                    <input class="form-control" type="text" name="breed" id="breed">
                </fieldset>
                <fieldset class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="color">Color:</span>
                    </div>
                    <input class="form-control" type="text" name="color" id="color">
                </fieldset>
                <fieldset class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="age">Date of Birth:</span>
                    </div>
                    <input class="form-control" type="date" name="age" id="age" required>
                    <div class="invalid-feedback">Please provide your pet's date of birth.</div>
                </fieldset>
                <fieldset class="mb-3 custom-file">
                    <input class="form-control" type="file" name="photo" id="formFile">
                    <label class="custom-file-label" id="photo" for="formFile"><i class="fa fa-cloud-upload"></i>
                        Upload Your Pet Photo</label>
                </fieldset>
                <div class="d-flex justify-content-center mt-3">
                    <button class="btn btn-base btn-max-width btn-white shadow" type="submit"><i class="fa-solid fa-square-plus mr-2"></i>Add My Pet</button>
                </div>
            </form>
        </div>
    </div>
</main>
<nav class="navbar shadow-up-dark">
    <div>
        <a href="/pet" class="navbar-link"><i class="fa-solid fa-paw"></i>
            My Pets</a>
    </div>
    <div>
        <a class="navbar-link" href="/logout"><i class="fas fa-sign-out-alt"></i>
            Logout</a>
    </div>
</nav>