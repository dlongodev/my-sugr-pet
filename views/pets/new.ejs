<main class="app-main app-main-base">
    <div class="content mt-3">
        <div class="m-3">
            <div class="text-center my-3 text-white">
                <h3>Create Your Pet Profile</h3>
            </div>
            <form action="/pet" method="POST">
                <fieldset class="form-group text-center">
                    <div class="row text-white">
                        <legend>Choose kind of pet</legend>
                        <div class='col text-right'>
                            <input type="radio" name="dog" id="dog" class="d-none imgbgchk" value="dog">
                            <label for="dog" aria-describedby="dog">
                                <img src="../img/icon-dog.png" alt="dog icon">
                                <div class="tick_container">
                                    <div class="tick"><i class="fa fa-check"></i></div>
                                </div>
                            </label>
                            </div>
                        <div class='col text-left'>
                            <input type="radio" name="cat" id="cat" class="d-none imgbgchk" value="cat">
                            <label for="cat" aria-describedby="cat">
                                <img src="../img/icon-cat.png" alt="Image 2">
                                <div class="tick_container">
                                    <div class="tick"><i class="fa fa-check"></i></div>
                                </div>
                            </label>
                        </div>
                    </div>
                </fieldset>
                <fieldset class="form-group d-flex mb-4">
                    <span class="input-group-text" id="petName">Pet Name:</span>
                    <input class="form-control" type="text" name="petName" id="petName">
                    </fieldset>
                <fieldset class="form-group d-flex mb-4">
                    <span class="input-group-text" id="breed">Breed:</span>
                    <input class="form-control" type="text" name="breed" id="breed">
                    </fieldset>
                <fieldset class="form-group d-flex mb-4">
                    <span class="input-group-text" id="color">Color:</span>
                    <input class="form-control" type="text" name="color" id="color">
                    </fieldset>
                <fieldset class="form-group d-flex mb-4">
                    <span class="input-group-text" id="age">Date of Birth:</span>
                    <input class="form-control" type="date" name="age" id="age">
                    </fieldset>
                    <div class="d-flex justify-content-center mt-5">
                        <input class="btn btn-base btn-white shadow" type="submit" value="Add Pet">
                    </div>
                    </form>
        </div>
    </div>
